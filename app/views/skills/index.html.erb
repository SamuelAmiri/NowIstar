<div class="col-md-9 skillattributes">
	<table class="table table-bordered table-hover spacing-table" id="my-skills">
		<thead>
			<tr>
				<th class="col-md-2">User</th>
				<th class="col-md-5">Service</th>
				<th class="col-md-1">Subcategory</th>
				<th class="col-md-1">Price</th>
			</tr>
		</thead>
		<tbody>
			<% @skills.each do |skill| %> 
				<tr>
					<td class="searchrow col-md-1">
						<a href= <%=user_path(skill.user)%>>
								<strong><%=skill.user.fname %></strong><br>
								<%= image_tag skill.user.image %>
						</a>
					</td>

					<td class="searchrow col-md-4">
						<a href= <%=user_skill_path(skill.user, skill.id)%>>
								<strong><%=skill.title %></strong><br>
								<%= skill.description %>
						</a>
					</td>

					<td class="searchrow col-md-1">
						<a href= <%=user_skill_path(skill.user, skill.id)%>>
								<%=skill.subcategory.name %>
						</a>
					</td>

					<td class="searchrow col-md-1">
						<a href= <%=user_skill_path(skill.user, skill.id)%>>
								<%= number_to_currency(skill.price) %>
						</a>
					</td>

					<td class="searchrow col-md-1">
						<a href= <%=user_skill_path(skill.user, skill.id)%>>
							<%=skill.zipcode %>
						</a>
					</td>

					<td class="searchrow col-md-1">
						<a class="btn btn-default" href= <%=user_skill_path(skill.user, skill.id)%> role="button">
							Book Now
						</a>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<div id="infinite-scrolling">
  		<%= will_paginate @skills%>
	</div>
</div>


<div class="col-md-3 googlemap">
	<div id="googleMap"></div>
</div>
